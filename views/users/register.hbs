{{#each errors }}
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="alert alert-danger mt-4">{{ text }}</div>
        </div>
    </div>
{{else}}

{{/each }}

<div class="row mt-4">
    <div class="col-md-6 mx-auto text-center">
        <a href="#"><img src="/img/logo.png" alt="" class="logo"></a>
    </div>
</div>
<div class="row mt-4">
    <div class="col-md-5 mx-auto">
        <div class="card card-body">
            <h3 class="text-center">Register</h3>
            <p class="text-center">You are a minute away from your AmashPay account.</p>
            <form action="/users/register" method="post">
                <div class="form-group">
                    <input type="text" name="name" placeholder="Name" value="{{name}}" class="form-control" required>
                </div>
                <div class="form-group">
                    <input type="email" name="email" placeholder="Email" value="{{email}}" class="form-control" required>
                </div>
                <div class="form-group">
                    <input type="password" name="password" placeholder="Password" value="{{password}}" class="form-control" required>
                </div>
                <div class="form-group">
                    <input type="password" name="password2" placeholder="Confirm Password" value="{{password2}}" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Get Started</button>
                <p class="text-center mt-3">By clicking "Get Started" I agree to AmashPay &nbsp;<a href="#">Terms and Conditions.</a></p>
            </form>
        </div>
        <p class="text-center mt-4">New to AmashPay? <a href="/users/login">Sign In</a></p>
    </div>
</div>